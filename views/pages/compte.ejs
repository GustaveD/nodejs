<% include header2 %>

<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span>Votre Profile</h1>
    <!-- LOGIN FORM -->
    <form action="/compte" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="form-group">
            <label>Pseudo</label>
            <input type="text" class="form-control" id="pseudo" name="pseudo">
        </div>

        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" id="pwd" name="pwd">
        </div>
        <hr>

        <div class="form-group">
            <label>Nom</label>
            <input type="text" class="form-control" id="nom" name="nom">
        </div>

        <div class="form-group">
            <label>Prénom</label>
            <input type="text" class="form-control" id="prenom" name="prenom">
        </div>

        <div class="form-group">
        	<label>Genre</label>
        	<label class="checkbox-inline">
        		<input type="checkbox" name="M" value="">Masculin
        	</label>
			<label class="checkbox-inline">
				<input type="checkbox" id="F" value="">Feminin
			</label>
			<label class="checkbox-inline">
				<input type="checkbox" id="I" value="">Indefini
			</label>
        </div>
        
        <div class="form-group">
        	<label>Orientation</label>
        	<label class="checkbox-inline">
        		<input type="checkbox" value="">Hétérosexuel
        	</label>
			<label class="checkbox-inline">
				<input type="checkbox" value="">Homosexuel
			</label>
			<label class="checkbox-inline">
				<input type="checkbox" value="">Bisexuel
			</label>
        </div>
        <hr>
        <div class="form-group">
  			<label for="comment">Biographie</label>
  				<textarea class="form-control" rows="5" id="comment" name="bio"></textarea>
		</div>
        <!--
		<hr>
		<div class="form-group">
			<label>Partager vos photos</label>
			<input type='file' name='upload_this_file_to_server'/>
		</div>-->
		<hr>
        <button type="submit" class="btn btn-warning btn-lg">Signup</button>
    </form>
</div>
</div>

<%include footer %>